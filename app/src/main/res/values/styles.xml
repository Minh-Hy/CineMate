<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Bo góc lớn ~ 24dp -->
    <style name="ShapeAppearance.CineMate.Large" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">24dp</item>
    </style>

    <!-- Card nổi nhẹ cho nền tối -->
    <style name="Widget.CineMate.Card" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/netflix_grey_850</item>
        <item name="cardElevation">6dp</item>
        <item name="strokeColor">@android:color/transparent</item>
    </style>

    <!-- Nút chính (Filled) -->
    <style name="Widget.CineMate.Button.Filled" parent="Widget.MaterialComponents.Button">
        <item name="android:minHeight">52dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">16dp</item>
        <item name="backgroundTint">@color/netflix_red</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- Nút viền (Outlined) cho Google / phụ -->
    <style name="Widget.CineMate.Button.Outlined" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:minHeight">52dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">16dp</item>
        <item name="strokeColor">@color/netflix_outline</item>
        <item name="iconTint">@color/netflix_text_secondary</item>
        <item name="android:textColor">@color/netflix_text_primary</item>
    </style>

    <!-- TextInputLayout OutlinedBox Dense (M2) -->
    <style name="Widget.CineMate.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxBackgroundMode">outline</item>
        <item name="boxStrokeColor">@color/netflix_outline</item>
        <item name="hintTextColor">@color/netflix_hint</item>
        <item name="helperTextTextColor">@color/netflix_text_secondary</item>
        <item name="android:textColorHint">@color/netflix_hint</item>
        <item name="startIconTint">@color/netflix_text_secondary</item>
        <item name="endIconTint">@color/netflix_text_secondary</item>

        <!-- Bo góc đồng nhất -->
        <item name="boxCornerRadiusTopStart">12dp</item>
        <item name="boxCornerRadiusTopEnd">12dp</item>
        <item name="boxCornerRadiusBottomStart">12dp</item>
        <item name="boxCornerRadiusBottomEnd">12dp</item>
    </style>

    <!-- Typography (Material 2) -->
    <style name="TextAppearance.CineMate.Headline" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:letterSpacing">0.02</item>
    </style>

    <style name="TextAppearance.CineMate.Body" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textColor">@color/netflix_text_primary</item>
    </style>

    <style name="TextAppearance.CineMate.Caption" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textColor">@color/netflix_text_secondary</item>
    </style>
    <!-- Bo tròn 100% cho ShapeableImageView -->
    <style name="ShapeAppearance.FullRound"
        parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
</resources>
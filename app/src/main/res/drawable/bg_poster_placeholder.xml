<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Lớp nền đen -->
    <item>
        <shape>
            <solid android:color="@color/netflix_black" />
        </shape>
    </item>

    <!-- Vệt sáng rất nhẹ chéo (giữ tối, không lộ đỏ) -->
    <item>
        <shape>
            <gradient
                android:type="linear"
                android:angle="45"
                android:startColor="#22000000"
                android:centerColor="#11000000"
                android:endColor="#00000000" />
        </shape>
    </item>

    <!-- Vignette dưới cùng để hút mắt vào form -->
    <item>
        <shape>
            <gradient
                android:type="radial"
                android:centerX="50%"
                android:centerY="80%"
                android:gradientRadius="600dp"
                android:startColor="#00000000"
                android:endColor="#66000000" />
        </shape>
    </item>
</layer-list>

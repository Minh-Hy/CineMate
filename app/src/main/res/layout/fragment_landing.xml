<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_screen_blue_500_to_purple_600"
    tools:context=".ui.LandingFragment">

    <!-- Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_landing"
        android:layout_width="0dp"
        android:layout_height="?attr/actionBarSize"
        android:background="@android:color/transparent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/logo_cinemate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="CineMate"
                android:textStyle="bold"
                android:textColor="@color/white"
             />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <ImageButton
                android:id="@+id/btn_more"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="8dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_more_vert_24"
                app:tint="@android:color/white"
                android:contentDescription="@string/more_options" />

            <!-- Nút Đăng nhập: vuông, xám đậm -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_go_to_login"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="Đăng nhập"
                android:textAllCaps="false"
                android:textStyle="bold"
                android:textSize="14sp"
                android:textColor="@color/login_button_text"
                android:minWidth="0dp"
                android:minHeight="0dp"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:layout_marginEnd="12dp"
                app:cornerRadius="4dp"
                app:rippleColor="#1FFFFFFF"
                app:backgroundTint="@color/login_button_bg"/>
        </LinearLayout>
    </androidx.appcompat.widget.Toolbar>

    <!-- Card chứa lưới poster + overlay + headline + dots -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_posters"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar_landing"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/cta_container"
        app:cardCornerRadius="12dp"
        app:cardBackgroundColor="#181818"
        app:cardUseCompatPadding="false"
        app:cardPreventCornerOverlap="true">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- Lưới poster -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_background_posters"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                app:spanCount="3"
                android:padding="6dp" />

            <!-- Overlay: đen phía trên, tối dần phía dưới -->
            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_cta_outline_gray" />

            <!-- Headline trắng ở gần đáy card -->
            <TextView
                android:id="@+id/tvHeadline"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_margin="20dp"
                android:gravity="center"
                android:text="Tìm ra những bộ phim yêu thích chỉ với vài lần nhấn"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:textSize="26sp" />
        </FrameLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- CTA dưới cùng: viền đỏ + nền đen trong suốt -->
    <LinearLayout
        android:id="@+id/cta_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="20dp"
        android:padding="14dp"
        android:background="@drawable/bg_cta_outline_red"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:id="@+id/tvCtaText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tạo tài khoản CineMate để khám phá những bộ phim phù hợp với sở thích"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:textSize="14sp"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

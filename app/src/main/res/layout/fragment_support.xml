<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".ui.SupportFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- ... (Các phần tử khác giữ nguyên như cũ) ... -->

        <!-- Thanh tiêu đề NETFLIX -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp">
            <ImageView
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:src="@drawable/cinemate"
                android:layout_centerHorizontal="true"/>
        </RelativeLayout>

        <!-- Tiêu đề: Tìm trợ giúp trực tuyến -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tìm trợ giúp trực tuyến"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:layout_marginBottom="24dp"
            android:layout_gravity="center"/>

        <!-- ... (Các TextViews cho Trung tâm trợ giúp, Quyền riêng tư, Điều khoản sử dụng) ... -->


        <!-- Phần thông báo không thể đăng ký -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chúng tôi ở đây để giúp bạn."
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bạn không thể đăng ký tài khoản Netflix trong ứng dụng. Chúng tôi biết điều này hơi phiền phức. Hãy đăng ký tham gia và quay lại để bắt đầu xem các series và phim nhé."
            android:textSize="16sp"
            android:lineSpacingExtra="4dp"
            android:textColor="@android:color/black"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bạn đã có tài khoản?"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:layout_marginBottom="8dp"/>

        <!-- Nút Khôi phục mật khẩu ĐÃ CẬP NHẬT -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_restore_password"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:text="Khôi phục mật khẩu"
            android:textAllCaps="false"
            android:textColor="@color/button_text_color"
            android:textSize="16sp"
            android:textStyle="bold"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:layout_marginBottom="24dp"
            app:backgroundTint="@color/button_background_color"
            app:cornerRadius="4dp"
            app:icon="@drawable/ic_lock"
            app:iconGravity="textStart"
            app:iconPadding="8dp"
            app:iconTint="@color/button_text_color"
            />

        <!-- Phần liên hệ dịch vụ khách hàng -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Liên hệ với Dịch vụ khách hàng của Netflix"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chúng tôi sẽ kết nối cuộc gọi miễn phí bằng kết nối Internet của bạn."
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:layout_marginBottom="16dp"/>

        <!-- Các nút Gọi và Trò chuyện ĐÃ CẬP NHẬT -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_call"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:minHeight="48dp"
                android:layout_marginEnd="8dp"
                android:text="Gọi"
                android:textAllCaps="false"
                android:textColor="@color/button_text_color"
                android:textSize="16sp"
                android:textStyle="bold"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                app:backgroundTint="@color/button_background_color"
                app:cornerRadius="4dp"
                app:icon="@drawable/ic_call"
                app:iconGravity="textStart"
                app:iconPadding="8dp"
                app:iconTint="@color/button_text_color"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_chat"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:minHeight="48dp"
                android:layout_marginStart="8dp"
                android:text="Trò chuyện"
                android:textAllCaps="false"
                android:textColor="@color/button_text_color"
                android:textSize="16sp"
                android:textStyle="bold"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                app:backgroundTint="@color/button_background_color"
                app:cornerRadius="4dp"
                app:icon="@drawable/ic_chat"
                app:iconGravity="textStart"
                app:iconPadding="8dp"
                app:iconTint="@color/button_text_color"/>
        </LinearLayout>

    </LinearLayout>
</ScrollView>
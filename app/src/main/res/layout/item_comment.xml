<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingTop="12dp"
    android:paddingBottom="12dp">

    <!-- Avatar người bình luận -->
    <ImageView
        android:id="@+id/image_avatar"
        android:layout_width="40dp"
        android:layout_height="40dp"
        tools:src="@android:drawable/sym_def_app_icon" />

    <!-- Layout chính chứa toàn bộ nội dung bên phải avatar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:orientation="vertical">

        <!-- Tên người dùng -->
        <TextView
            android:id="@+id/text_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textStyle="bold"
            tools:text="Tên người dùng" />

        <!-- Ngày bình luận -->
        <TextView
            android:id="@+id/text_comment_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/netflix_gray_light"
            android:textSize="12sp"
            tools:text="1 ngày trước" />

        <!-- Nội dung bình luận -->
        <TextView
            android:id="@+id/text_comment_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textColor="@color/white"
            tools:text="Đây là nội dung của bình luận. Nó có thể khá dài và sẽ tự động xuống dòng." />

        <!-- Khu vực các nút hành động (Trả lời, Thích...) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_reply_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:padding="4dp"
                android:text="Trả lời"
                android:textColor="@color/netflix_gray_light"
                android:textSize="12sp"
                android:textStyle="bold" />

            <!-- Bạn có thể thêm các nút Like, ... ở đây -->

        </LinearLayout>

        <!-- RecyclerView để hiển thị các câu trả lời -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_replies"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:nestedScrollingEnabled="false"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:itemCount="2"
            tools:listitem="@layout/item_reply"
            tools:visibility="gone" />

        <!-- Nút để tải thêm các câu trả lời -->
        <TextView
            android:id="@+id/button_load_more_replies"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:background="?attr/selectableItemBackground"
            android:padding="4dp"
            android:text="Xem thêm trả lời"
            android:textColor="?attr/colorPrimary"
            android:textSize="12sp"
            android:visibility="gone"
            tools:visibility="visible" />

    </LinearLayout>

</LinearLayout>
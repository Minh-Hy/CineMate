<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="start"
    android:orientation="horizontal"
    android:padding="8dp">

    <!-- Avatar -->
    <ImageView
        android:id="@+id/image_avatar"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_gravity="bottom"
        tools:src="@android:drawable/sym_def_app_icon" />

    <!-- Bong bóng chat -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:background="@drawable/bg_chat_received"
        android:orientation="vertical"
        android:padding="12dp">

        <!-- Nội dung tin nhắn -->
        <TextView
            android:id="@+id/text_message_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="16sp"
            tools:text="Nội dung tin nhắn" />

        <!-- *** VIEW MỚI: Hiển thị Ảnh đính kèm *** -->
        <ImageView
            android:id="@+id/image_attachment"
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:layout_marginTop="8dp"
            android:scaleType="centerCrop"
            android:visibility="gone"
            tools:visibility="visible"
            tools:src="@tools:sample/backgrounds/scenic"/>

        <!-- *** VIEW MỚI: Hiển thị File đính kèm *** -->
        <TextView
            android:id="@+id/text_file_attachment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:drawablePadding="8dp"
            android:ellipsize="middle"
            android:maxWidth="200dp"
            android:singleLine="true"
            android:textColor="@color/netflix_red"
            android:textStyle="italic"
            android:visibility="gone"
            app:drawableStartCompat="@android:drawable/ic_menu_save"
            app:drawableTint="@color/white"
            tools:text="tailieu_quan_trong.docx"
            tools:visibility="visible" />

    </LinearLayout>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="start"
    android:orientation="horizontal"
    android:paddingStart="8dp"
    android:paddingTop="4dp"
    android:paddingEnd="64dp"
    android:paddingBottom="4dp">

    <ImageView
        android:id="@+id/image_avatar"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_gravity="bottom"
        tools:src="@android:drawable/sym_def_app_icon" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="8dp">

        <!-- RecyclerView cho ảnh/file đính kèm -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_attachments"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone" />

        <!-- Nội dung tin nhắn text -->
        <TextView
            android:id="@+id/text_message_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_chat_received"
            android:padding="12dp"
            android:textColor="@color/white"
            android:textSize="16sp"
            tools:text="Đây là tin nhắn nhận được từ Admin." />

    </LinearLayout>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="end"
    android:orientation="vertical"
    android:paddingStart="64dp"
    android:paddingTop="4dp"
    android:paddingEnd="8dp"
    android:paddingBottom="4dp">

    <!-- Bong bóng chat (bên phải) -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_chat_sent"
        android:orientation="vertical"
        android:padding="12dp">

        <!-- Nội dung tin nhắn -->
        <TextView
            android:id="@+id/text_message_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="16sp"
            tools:text="Tin nhắn gửi đi" />

        <!-- *** VIEW MỚI: Hiển thị Ảnh đính kèm *** -->
        <ImageView
            android:id="@+id/image_attachment"
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:layout_marginTop="8dp"
            android:scaleType="centerCrop"
            android:visibility="gone"
            tools:visibility="visible"
            tools:src="@tools:sample/backgrounds/scenic"/>

        <!-- *** VIEW MỚI: Hiển thị File đính kèm *** -->
        <TextView
            android:id="@+id/text_file_attachment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:drawablePadding="8dp"
            android:ellipsize="middle"
            android:maxWidth="200dp"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textStyle="italic"
            android:visibility="gone"
            app:drawableStartCompat="@android:drawable/ic_menu_save"
            app:drawableTint="@color/white"
            tools:text="bai_tap.pdf"
            tools:visibility="visible" />

    </LinearLayout>
</LinearLayout>